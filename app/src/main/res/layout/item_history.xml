<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/textFechaHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/01/2025"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textDescripcionHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambio de aceite"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textCostoHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 500.00"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/holo_green_dark" />

        <RatingBar
            android:id="@+id/ratingBarItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:isIndicator="true"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnAgregarFactura"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Agregar factura" />

            <Button
                android:id="@+id/btnVerFacturas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Ver facturas" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
