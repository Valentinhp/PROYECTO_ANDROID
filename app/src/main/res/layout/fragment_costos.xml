<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardCostos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
    app:cardBackgroundColor="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Título “Total gastado” -->
        <TextView
            android:id="@+id/tvTotalCostos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total gastado este mes"
            style="@style/TextAppearance.MaterialComponents.Headline5"
        android:textColor="?attr/colorOnSurface"
        android:textAlignment="center"/>

        <!-- Valor numérico -->
        <TextView
            android:id="@+id/tvTotalCostosValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginTop="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textAlignment="center"/>

        <!-- Subtítulo “Promedio” -->
        <TextView
            android:id="@+id/tvAvgCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promedio por servicio"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_marginTop="24dp"
            android:textColor="?attr/colorOnSurface"
            android:textAlignment="center"/>

        <!-- Valor promedio -->
        <TextView
            android:id="@+id/tvAvgCostValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_marginTop="8dp"
            android:textColor="?attr/colorOnSurface"
            android:textAlignment="center"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerReportes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Ver reportes"
            android:textColor="@android:color/white"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@color/colorSecondary"
            app:rippleColor="@android:color/white"/>



    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
