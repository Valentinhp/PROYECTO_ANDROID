<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen decorativa -->
        <ImageView
            android:id="@+id/imgDiag"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_diagnosis"
            android:contentDescription="Icono diagn贸stico"
            android:layout_marginBottom="16dp"/>

        <!-- Falla -->
        <TextView
            android:id="@+id/tvFalla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Descripci贸n -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Recomendaci贸n -->
        <TextView
            android:id="@+id/tvRecomendacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Botones de acci贸n -->
        <Button
            android:id="@+id/btnComparar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Comparar repuestos"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnVerTalleres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ver talleres"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Volver"/>

    </LinearLayout>
</ScrollView>
