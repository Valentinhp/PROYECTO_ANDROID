<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#173448">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tipo de servicio -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo de servicio"
            app:hintTextColor="#D5D2D1"
            app:boxStrokeColor="#2E5D7D">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#D5D2D1"
                android:textColorHint="#545E66"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fecha seleccionada -->
        <TextView
            android:id="@+id/tvFechaSeleccionada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: --/--/----"
            android:layout_marginTop="12dp"
            android:textColor="#D5D2D1"/>

        <Button
            android:id="@+id/btnSeleccionarFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar fecha"
            android:layout_marginTop="8dp"
            android:backgroundTint="#2E5D7D"
            android:textColor="#D5D2D1"/>

        <!-- Hora seleccionada -->
        <TextView
            android:id="@+id/tvHoraSeleccionada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora: --:--"
            android:layout_marginTop="16dp"
            android:textColor="#D5D2D1"/>

        <Button
            android:id="@+id/btnSeleccionarHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar hora"
            android:layout_marginTop="8dp"
            android:backgroundTint="#2E5D7D"
            android:textColor="#D5D2D1"/>

        <!-- Kilometraje -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kilometraje"
            android:layout_marginTop="12dp"
            app:hintTextColor="#D5D2D1"
            app:boxStrokeColor="#2E5D7D">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etKilometraje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="#D5D2D1"
                android:textColorHint="#545E66"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Descripción -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:layout_marginTop="12dp"
            app:hintTextColor="#D5D2D1"
            app:boxStrokeColor="#2E5D7D">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#D5D2D1"
                android:textColorHint="#545E66"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Switch Notificar -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notificar"
                android:layout_marginEnd="8dp"
                android:textColor="#D5D2D1"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchNotificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="#AA302A"
                android:trackTint="#263A4B"/>
        </LinearLayout>

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="24dp"
            android:backgroundTint="#AA302A"
            android:textColor="#D5D2D1"/>

    </LinearLayout>
</ScrollView>
