<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDeepBlue"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Tipo de servicio -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tipo de servicio"
            app:hintTextColor="@color/colorLightGray"
            app:boxStrokeColor="@color/colorSteelBlueLight">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightGray"
                android:hintTextColor="@color/colorMetalGray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Fecha seleccionada -->
        <TextView
            android:id="@+id/tvFechaSeleccionada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha: --/--/----"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorLightGray"/>

        <Button
            android:id="@+id/btnSeleccionarFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar fecha"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorSteelBlueLight"
            android:textColor="@color/colorLightGray"/>

        <!-- Kilometraje -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kilometraje"
            android:layout_marginTop="12dp"
            app:hintTextColor="@color/colorLightGray"
            app:boxStrokeColor="@color/colorSteelBlueLight">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etKilometraje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/colorLightGray"
                android:hintTextColor="@color/colorMetalGray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Descripción -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:layout_marginTop="12dp"
            app:hintTextColor="@color/colorLightGray"
            app:boxStrokeColor="@color/colorSteelBlueLight">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightGray"
                android:hintTextColor="@color/colorMetalGray"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Switch Notificar -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notificar"
                android:layout_marginEnd="8dp"
                android:textColor="@color/colorLightGray"/>
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchNotificar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@color/colorRedBright"
                android:trackTint="@color/colorBlueGray"/>
        </LinearLayout>

        <!-- Botón Guardar -->
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/colorRedBright"
            android:textColor="@color/colorLightGray"/>
    </LinearLayout>
</ScrollView>
