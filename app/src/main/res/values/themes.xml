<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.RC_MECHA_MAINT_S" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores básicos ya definidos -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryVariant</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>

        <!-- ===== Texto por defecto ===== -->
        <!-- Texto principal (la mayoría de TextView) -->
        <item name="android:textColorPrimary">@color/onBackground</item>
        <!-- Texto secundario (subtítulos, detalles) -->
        <item name="android:textColorSecondary">@color/colorOutline</item>
        <!-- Hint, placeholder, deshabilitado -->
        <item name="android:textColorHint">@color/colorOutline</item>
        <!-- Texto en botones y elementos primarios -->
        <item name="android:textColor">@color/onPrimary</item>
    </style>
</resources>
